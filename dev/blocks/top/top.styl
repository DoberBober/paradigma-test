.top
	position relative
	overflow hidden
	padding-bottom 25px

.top__heading
	margin 0
	font-weight 300
	font-size 28px

	b
		display table
		font-weight 700

.top__list
	margin 65px 0 0
	padding 0
	list-style none

	li
		font-weight 300
		font-size 18px
		padding-left 38px
		position relative

		& + li
			margin-top 20px

		&::before
			content ''
			position absolute
			left 0
			top 3px
			width 16px
			height 16px
			border 4px solid #fff
			background var(--mainPink)
			border-radius 100%

.top__btn
	position relative
	display table
	margin-top 60px
	max-width 380px
	padding 28px
	font-weight 700
	font-size 14px
	text-transform uppercase
	color #fff
	background-image linear-gradient( 90deg, rgb(238,133,140) 0%, rgb(244,161,164) 55%, rgb(250,188,188) 98%)
	border-radius 40px
	box-shadow inset 0 -9px 0 0 #ef8c92, inset 0 -4px 0 0 #d7747a
	text-decoration none
	text-align center
	transition .25s

	&:hover, &:focus
		box-shadow inset 0 -90px 0 0 #ef8c92

@media (min-width: 580px)
	.top__heading
		font-size 48px

	.top__btn
		padding 28px 155px 28px 45px

		&::before
			content url('../images/branch.png')
			position absolute
			right -125px
			top 50%
			transform translateY(-50%)

@media (max-width: 1023px)
	.top__next
		display none
	
@media (max-width: 719px)
	.top__info
		padding 0 15px
		
		button
			display none
		
		p
			position relative
			font-weight 300
			font-size 14px
			margin-top 180px
			padding 15px
			background #fff
			border-radius 5px
			
			&::before
				content ''
				width 100%
				height 120px
				position absolute
				bottom 100%
				margin-bottom 10px
				left 0
				background url('../images/card--mobile.png') center bottom no-repeat
				background-size contain
				
@media (min-width: 720px)
	.top__info
		position absolute
		right 80px
		bottom 5px
		
		button
			width 41px
			height 41px
			padding 0
			display flex
			align-items center
			justify-content center
			background-image linear-gradient( 90deg, rgb(238,133,140) 0%, rgb(244,161,164) 27%, rgb(250,188,188) 49%, rgb(244,161,164) 71%, rgb(238,133,140) 100%)
			background-size 200%
			border none
			border-radius 100%
			transition .25s
			
			&:hover, &:focus
				outline none
				background-position 100%
				
				& + p
					display block 

			&::before
				content ''
				width 100%
				height 100%
				border-radius 100%
				z-index -1
				position absolute
				left 2px
				top 2px
				background #d7747a
			
			&::after
				content url('../images/card.png')
				position absolute
				left -331px
				top -180px
				background url('../images/card.png') left top no-repeat
				pointer-events none
				z-index -1
		
		svg
			fill #fff
			
		p
			display none
			position absolute
			left 100%
			bottom 100%
			background #fff
			transform translate(-50%,-10px)
			margin 0
			left 50%
			width 176px
			padding 25px
			text-align center
			
			&::after
				content ''
				position absolute
				left 0
				bottom 100%
				width 100%
				height 15px
				background url('../images/border--2.png') center center no-repeat
				background-size 100% 100%
			
			&::before
				content ''
				width 100%
				height 100%
				position absolute
				left 10px
				bottom 30px
				background url('../images/border.png') center center no-repeat
				z-index -1

@media (min-width: 1024px)
	.top
		padding-top 115px
		background url('../images/top.jpg') center bottom no-repeat #f1e2d8
		background-size cover
		position relative

	.top__next
		width 32px
		height 32px
		border 4px solid var(--mainPink)
		border-radius 100%
		display flex
		align-items center
		justify-content center
		position absolute
		left 50%
		bottom 34px
		transform translateX(-50%)
		
		&::before
			content ''
			width 2px
			height 21px
			background var(--mainPink)
			position absolute
			left 50%
			margin-left -1px
			top 100%
		
		&::after
			content ''
			position absolute
			width 12px
			height 12px
			border 3px solid var(--mainPink)
			border-radius 100%
			left 50%
			top calc(100% + 21px)
			transform translateX(-50%)
			background #fff
			

		i, i::before, i::after
			position absolute
			left -4px
			top -4px
			width calc(100% + 8px)
			height calc(100% + 8px)
			border-radius 100%
			border 1px solid #fff
			z-index -1
		
		i::before, i::after
			z-index 1
			content ''
			animation topBtnAnimation 2s infinite
		
		i::after
			animation-delay .5s
	
	@keyframes topBtnAnimation
		0%
			transform scale(1, 1)
		75%
			transform scale(2.5, 2.5)
			opacity 0
		100%
			transform scale(1, 1)
			opacity 0

	.top__info
		right initial
		left 65%
		bottom 70px
		z-index 1

@media (min-width: 1366px)
	.top
		padding-bottom 95px
		
	.top__info
		left 55%
		bottom 165px

@media (min-width: 1600px)
	.top
		z-index 1
		overflow hidden
	
	.top__parallax
		position absolute
		z-index -1

	.top__parallax--left
		left 0
		top 25%
		width 367px
		height 340px
		background url('../images/heart--1.png') center center no-repeat

	.top__parallax--right
		right -116px
		top 11%
		width 252px
		height 266px
		background url('../images/heart--2.png') center center no-repeat
