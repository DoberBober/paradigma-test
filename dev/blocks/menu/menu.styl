.menu
	margin-top 15px

.menu__list
	position relative
	margin 0
	padding 0 12px
	list-style none
	border-radius 4px
	background #fff
	display flex
	justify-content space-evenly

	&::before
		content ''
		position absolute
		left 20px
		width calc(100% - 40px)
		height 8px
		bottom -8px
		background rgba(255,255,255,.5)
		border-bottom-left-radius 4px
		border-bottom-right-radius 4px

.menu__item
	padding 20px 24px 21px
	font-weight 300

	a
		font-size 15px
		color var(--mainGrey)
		text-decoration none

		&:hover, &:focus
			text-decoration underline

	&--active
		font-weight 700

@media (max-width: 1365px)
	.menu__list
		flex-wrap wrap

@media (max-width: 1023px)
	.menu
		position fixed
		left 0
		top 0
		margin 0
		width 320px
		transition .25s
		transform translateX(-100%)
		visibility hidden

	.menu__container
		padding 0

	.menu__list
		display block
		height 100vh
		padding 15px 40px 15px 15px
		overflow-y auto

		&::before
			display none

	.menu__item
		padding-left 0
		padding-right 0

	.menu--active
		visibility visible
		transform translateX(0)
