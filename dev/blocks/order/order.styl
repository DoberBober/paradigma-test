.order
	margin-left 3.75%

.order__btn
	display flex
	align-items center
	padding 21px 25px
	font-weight 500
	font-size 15px
	color var(--mainGrey)
	text-decoration none
	background #fff
	border-radius 30px
	box-shadow inset 0 -3px 0 0 #ebeaea
	transition .25s

	&:hover, &:focus
		box-shadow inset 0 -80px 0 0 #ebeaea

	svg
		flex-shrink 0
		margin-right 10px
		fill var(--mainPink)

@media (max-width: 1365px)
	.order
		margin 25px 0 0

	.order__btn
		border 1px solid #ebeaea
		justify-content center
